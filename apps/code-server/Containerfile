FROM ghcr.io/coder/code-server:4.99.2@sha256:6b5fcf74bb19579ca1666c8f96ac406ca5146a5c8756963a10991c4e520fa085 

USER root

# hadolint ignore=DL3008
RUN apt-get update \
  && apt-get install --no-install-recommends -y \
    build-essential \
    lldb \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

USER $USER

ENTRYPOINT ["/usr/bin/entrypoint.sh", "--bind-addr", "0.0.0.0:8080", "."]
