{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "apps/renovate/**"
      ],
      "groupName": "renovate",
      "extends": [
        ":semanticCommitScope(renovate)"
      ],
      "addLabels": [
        "renovate"
      ],
      "automerge": true
    }
  ]
}
